    "version": "0.2.0",
    "configurations": [
        {
            "name": "Txns to QIF",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "generateQIF"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

        {
            "name": "QIF to SQL",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "importQIF"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node", 
            "console": "integratedTerminal",
            "outputCapture": "std"
        }
    ]
}